#
# ~/.alias
#


WHICH_OS="$(uname -s)"

# OS X aliases
if [[ $WHICH_OS == "Darwin" ]]; then
    alias ls="gls --color=auto --group-directories-first"
    alias ln="gln"
    alias tmux="TERM=screen-256color-bce tmux"
fi

# Linux aliases
if [[ $WHICH_OS == "Linux" ]]; then
    alias ls="ls --color=auto --group-directories-first"
fi
