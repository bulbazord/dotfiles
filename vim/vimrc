set nocompatible
filetype off

" Vundle stuff
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'helino/vim-nasm'
Plugin 'bling/vim-airline'
Plugin 'rust-lang/rust.vim'
Plugin 'christoomey/vim-tmux-navigator'

call vundle#end()
filetype plugin indent on

" Nice defaults
syntax on
set encoding=utf-8
set number
set showcmd
set ruler
set backspace=2

" Colorscheme for now
colorscheme base16-monokai

" Airline stuff
set laststatus=2
let g:airline_powerline_fonts=1
let g:airline_theme="dark"

" Editor settings
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set smarttab
